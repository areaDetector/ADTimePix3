# Hot pixel clear: Negative mask, then calibration.
record(sseq, "$(P)$(R)ResetHotPelSeq")
{
   # Write Negative mask to FPGA: pixels do not count events
   field(DOL1, "1")
   field(LNK1, "$(P)$(R)ResetNegMaskSeq.PROC CA MS")
   field(WAIT1, "Wait")
   # Create Positive mask
   # Enable mask reset, create positive mask
   field(DLY2, "0.5")
   field(WAIT2, "Wait")
   field(DOL2, "1")
   field(LNK2, "$(P)$(R)MaskReset PP MS")
   field(DLY3, "0.01")
   field(WAIT3, "Wait")
   field(DOL3, "1")
   field(LNK3, "$(P)$(R)MaskBPC.PROC CA MS")
   # Disable mask reset flag
   field(DLY4, "0.5")
   field(WAIT4, "Wait")
   field(DOL4, "0")
   field(LNK4, "$(P)$(R)MaskReset PP MS")
   # Enable mask write to FPGA
   field(WAIT5, "Wait")
   field(DOL5, "1")
   field(LNK5, "$(P)$(R)MaskWrite PP MS")
   # Write to FPGA
   field(DLY6, "0.01")
   field(WAIT6, "Wait")
   field(DOL6, "1")
   field(LNK6, "$(P)$(R)MaskBPC.PROC CA MS")
   # Disable mask write
   field(DLY7, "0.5")
   field(WAIT7, "Wait")
   field(DOL7, "0")
   field(LNK7, "$(P)$(R)MaskWrite PP MS")
}

